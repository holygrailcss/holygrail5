{
  "name": "holygrail5",
  "version": "1.0.2",
  "description": "Framework CSS generator con Node.js - Genera CSS optimizado con variables CSS desde un archivo JSON de configuraciÃ³n",
  "main": "generator.js",
  "bin": {
    "holygrail5": "./generator.js"
  },
  "scripts": {
    "generate": "node generator.js",
    "start": "node generator.js && NODE_NO_WARNINGS=1 npx http-server -p 3000 -o",
    "dev": "node src/dev.js",
    "watch": "node src/watch.js",
    "serve": "NODE_NO_WARNINGS=1 npx http-server -p 3000 -o",
    "test": "node tests/run-all.js",
    "prepublishOnly": "npm run generate",
    "vars:list": "node src/cli-variables.js list",
    "vars:report": "node src/cli-variables.js report",
    "vars:remove": "node src/cli-variables.js remove",
    "vars:remove-all-unused": "node src/cli-variables.js remove-all-unused",
    "vars:show-all": "node src/cli-variables.js show-all"
  },
  "keywords": [
    "css",
    "framework",
    "generator",
    "css-variables",
    "responsive",
    "typography",
    "css-framework",
    "design-tokens"
  ],
  "author": "HolyGrail CSS",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/holygrailcss/holygrail5.git"
  },
  "files": [
    "generator.js",
    "config.json",
    "README.md",
    "src/**/*"
  ],
  "engines": {
    "node": ">=12.0.0"
  }
}

  },
  "files": [
    "generate-css.js",
    "config.json",
    "README.md",
    "src/**/*",
    "themes/**/*"
  ],
  "engines": {
    "node": ">=12.0.0"
  },
  "devDependencies": {
    "serve": "^14.2.1"
  }

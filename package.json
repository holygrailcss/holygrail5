{
  "name": "holygrail5",
  "version": "1.0.8",
  "description": "Framework CSS generator con Node.js - Genera CSS optimizado con variables CSS desde un archivo JSON de configuraciÃ³n",
  "main": "generate-css.js",
  "style": "dist/output.css",
  "bin": {
    "holygrail5": "./generate-css.js"
  },
  "scripts": {
    "build": "node generate-css.js && npm run copy-theme-html",
    "copy-theme-html": "node copy-theme-html.js",
